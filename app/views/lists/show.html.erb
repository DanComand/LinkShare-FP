<nav class="submenu">
	<div class="bookmark-form">
	  <%= render 'bookmarks/form' %>
	</div>

	<div class="invite-form">
	  <%= render 'invites/form' %>
	</div>
</nav>

<div class="bookmark-content">

	<% @bookmarks.each do |bookmark| %>
		<article class="bookmark">
			<p>
				Posted by: <%= bookmark.user.firstName %><img src="<%= bookmark.user.avatar.fifty %>">
			</p>

			<header>
				<a class="bookmark-url" href="<%= bookmark.url %>" target="_blank">
					<h1>
						<%= bookmark.title %>
					</h1>
					<img src="<%= bookmark.image %>">
				</a>
			</header>

			<% if bookmark.description %>
				<p><%= bookmark.description %></p>
			<% end %>

			<%= link_to "Delete", bookmark, method: :delete, data: {confirm: "Are you sure you want to delete this bookmark?"}  %>

			<%= form_for([bookmark, Note.new]) do |f| %>
				<div class="field">
					<%= f.label :comment %>
					<%= f.text_area :comment %>
				</div>

				<div class="actions">
					<%= f.submit "Add Comment" %>
				</div>
			<% end %>

			<ul>
				<% bookmark.notes.reverse.each do |note| %>
					<li>
						<img src="<%= note.user.avatar.thumb %>">
						<p class="note-comment"><%= note.comment %></p>

						<% if note.user != nil %>
							<em> by <%= note.user.firstName %></em>
							<!-- Added on: <%= note.created_at %> -->
						<% end %>
					</li>
				<% end %>
			</ul>
		</article>
	<% end %>
</div>

