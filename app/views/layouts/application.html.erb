<!DOCTYPE html>
<html>
<head>
  <title>LinkShare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,700italic,700,400italic,500,500italic,300,300italic,100italic' rel='stylesheet' type='text/css'>
</head>
<body>

<div class="nav">
	
		<p class="userinfo">
		<% if current_user %>
			Signed in as <%= current_user.firstName %> // 
			<%= link_to "Log Out", logout_path, :method => :delete %>
			<% else %>
			<%= link_to "Log in", new_session_path %> or <%= link_to "Sign Up", new_user_path %>
			<% end %>	<p>LinkShare</p></p>
			
</div>

<div class="list-nav">

</div>


<% if flash[:notice] %>
	<p id="notice"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
	<p id="alert"><%= flash[:alert] %></p>
<% end %>

<%= yield %>



</body>
</html>
